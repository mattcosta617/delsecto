<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles/style.css" />
    <title>Edit Language</title>
</head>
<body>
    <%- include ('../partials/header.ejs'); -%>



<main>
    <form action="/languages/<%=language._id %>?_method=PUT" method="POST">
    
        <div class="language"><%- include ('../partials/languageList.ejs'); -%></div>
    
        <div>
          <label for="language">Language</label>
          <textarea id="body" name="language"><%= language.language %></textarea>
        </div>
        <button type="submit" id="updateButton">Update Language</button>
        
      </form>
      <%- include ('../partials/deleteButton.ejs', {url: `/languages/${language.id}`}); -%>
    </main>


    <div id="bug">
        <div id="leftAntenna"></div>
        <div id="rightAntenna"></div>
        <div id="bugHead"></div>
        <div id="bugBody"></div>
        <div id="bugLeftArm"></div>
        <div id="bugRightArm"></div>
        <div id="bugMiddleLeft"></div>
        <div id="bugMiddleRight"></div>
        <div id="bugLeftLeg"></div>
        <div id="bugRightLeg"></div>
        <div id="leftWing"></div>
        <div id="rightWing"></div>
        </div>
    
</body>
</html>